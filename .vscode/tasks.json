    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": ".\\toolchain\\make.exe -C .",
            "group": "build",
        },
        {
            "label": "erase",
            "type": "shell",
            "command": ".\\toolchain\\make.exe -C . erase"
        },
        {
            "label": "download",
            "type": "shell",
            "command": ".\\toolchain\\make.exe -C . flash"
        },
        {
            "label": "download softdevice",
            "type": "shell",
            "command": ".\\toolchain\\make.exe -C . flash_softdevice"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rd /s /q .\\_build"
        },
    ]
}